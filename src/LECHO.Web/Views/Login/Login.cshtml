@model LECHO.Infrastructure.Users
@{
    ViewData["Title"] = "Login";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Login</title>
    <style>
        # login-div{
            position:absolute;
            left:40%;
            top:40%;
            border: 1px solid#ccc;
            padding: 10px 10px;
        }
    </style>
</head>
<body>
    <div id=" login-div">
        @using (Html.BeginForm("Autherize","Login",FormMethod.Post))
        {
            <table>
                <tr>
                    <td></td>
                    <td style="text-decoration: underline">Вхід</td>
                </tr>
                <tr>
                    <td>
                        Логін
                    </td>
                    <td>
                        @Html.EditorFor(Model => Model.Login)
                    </td>
                </tr>
                <tr>
                    <td>Пароль</td>
                    <td>@Html.PasswordFor(Model => Model.Password)</td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" name="name" value="Login" /></td>
                </tr>
            </table>
        }
    </div>
</body>
</html>

